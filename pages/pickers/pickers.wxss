.infos-container{
  display: flex;
  flex-direction: column;
  border-bottom: 6px solid #f5f5f5;
}
.info-container{
  padding: 28rpx 0;
  margin: 0 30rpx;
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #c7c7c7;
}
.no-border{
  border: none;
}
.label-container{
  display: flex;
  align-items: center;
}
.label-img{
  width: 40rpx;
  height: 40rpx;
  margin-right: 26rpx;
}
.label-text{
  color: #030303;
  font-size: 14px;
}
.value-container{
  display: flex;
  align-items: center;
}
.value{
  color: #c6c6c6;
  font-size: 14px;
}
.input{
  width: 14rpx;
  height: 28rpx;
  margin-left: 26rpx;
}

/* pages/input/input.wxss */
.input-background{
  width: 100%;
  height: 100vh;
  background: rgba(0, 0, 0, 0.1);
  position: fixed;
  top: 0;
}
.input-container{
  width: 100%;
  height: 230px;
  background: #fff;
  position: absolute;
  bottom: 0;
  display: flex;
}
.input-title{
  width: 100%;
  text-align: center;
  font-size: 18px;
  color: #826fca;
  position: absolute;
  top: 20px;
}
.input-btn-container{
  position: absolute;
  top: 0;
  width: 100%;
  display: flex;
  justify-content: space-between;
}
.input-btn{
  padding: 10px;
  font-size: 16px;
}
.input-btn-cancel{
  color: #969696;
}
.input-btn-confirm{
  color: #030303;
}
.picker-container{
  width: 80%;
  height: 150px;
  margin: 56px auto 0;
}
.picker-content{
  width: 100%;
  text-align: center;
  line-height: 34px;
}
.pickers-unit{
  width: 14%;
  line-height: 150px;
  text-align: center;
  color: #826fca;
}
.picker-unit{
  width: 34%;
  line-height: 150px;
  text-align: center;
  color: #826fca;
}
.selected{
  border-top: 1px solid #826fca;
  border-bottom: 1px solid #826fca;
}